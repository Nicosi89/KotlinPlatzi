fun main(args: Array<String>) {
    val menuPrincipal: String = ("Bienvenido a RecipeMaker \n 1. Hacer receta \n 2. Ver mis recetas \n 3. Salir")
    println(menuPrincipal)

    val opcion: String? = readLine()
        if (opcion == "1") {
            val ingredientes: String = ("Los ingredientes que tienes son: \n 1. Agua 2. Leche 3. Carne 4. Verduras 5. Frutas 6. Cereal 7.Huevos 8. Aceite")
            println(ingredientes)
            println("Escriba su receta aqu√≠")
            var receta: String? = readLine()
            println("Su receta es: $receta")
        }
        if (opcion == "2") {
            println("Su receta es: $receta")
        }
        if (opcion == "3") {
            println("Adios!")
        }
}
